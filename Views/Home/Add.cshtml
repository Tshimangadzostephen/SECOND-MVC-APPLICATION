
@{
    ViewBag.Title = "Add";
}

<h2>Add Shape</h2>
@using (Html.BeginForm("Add", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="fill">Fill</label>
        <select class="form-control" name="fill" id="fill">
            <option value="#ff0000">Red</option>
            <option value="#ff8000">Orange</option>
            <option value="#ffff00">Yellow</option>
            <option value="#40ff00">Green</option>
            <option value="#00ffff">Light Blue</option>
            <option value="#0000ff">Dark Blue</option>
            <option value="#8000ff">Purple</option>
            <option value="#ff00ff">Pink</option>
        </select>
    </div>
    <div class="form-group">
        <label for="outline">Stroke Colour</label>
        <select class="form-control" id="outline" name="outline">
            <option value="#ff0000">Red</option>
            <option value="#ff8000">Orange</option>
            <option value="#ffff00">Yellow</option>
            <option value="#40ff00">Green</option>
            <option value="#00ffff">Light Blue</option>
            <option value="#0000ff">Dark Blue</option>
            <option value="#8000ff">Purple</option>
            <option value="#ff00ff">Pink</option>
        </select>
    </div>
    <div class="form-group">
        <label for="stroke">Stroke Width</label>
        <input type="number" min="0" max="3" class="form-control" name="stroke" id="stroke">
    </div>
    <div class="form-group">
        <label for="shapeType">Choose shape</label>
        <select class="form-control" id="shapeType" name="type">
            <option value="1">Rectangle</option>
            <option value="2">Circle</option>
            <option value="3">Triangle</option>
            <option value="4"> Ellipse</option>
        </select>
    </div>
    <div class="form-group">
        <label for="xCoord">X Coordinate</label>
        <input type="number" min="0" max="449" class="form-control" name="xCoord" id="xCoord">
    </div>
    <div class="form-group">
        <label for="yCoord">Y Coordinate</label>
        <input type="number" min="0" max="399" class="form-control" name="yCoord" id="yCoord">
    </div>
    <!-- Fields for circle shape -->
    <div class="form-group circ">
        <label for="radius">Radius</label>
        <input type="number" min="0" max="100" class="form-control" name="radius" id="radius">
    </div>
    <!-- Fields for rectangle shape -->
    <div class="form-group rect">
        <label for="width">Width</label>
        <input type="number" min="0" max="449" class="form-control" name="width" id="">
    </div>
    <div class="form-group rect">
        <label for="height">Height</label>
        <input type="number" min="0" max="399" class="form-control" name="height" id="height">
    </div>
    <!-- Fields for Triangle shape -->
    <div class="form-group tri">
        <label for="topx">Top X axis</label>
        <input type="number" min="0" max="449" class="form-control" name="topx" id="topx">
    </div>
    <div class="form-group tri">
        <label for="topy">Top Y axis</label>
        <input type="number" min="0" max="399" class="form-control" name="topy" id="topy">
    </div>
    <div class="form-group tri">
        <label for="rightx">Right X axis</label>
        <input type="number" min="0" max="449" class="form-control" name="rightx" id="rightx">
    </div>
    <div class="form-group tri">
        <label for="righty">Right Y axis</label>
        <input type="number" min="0" max="399" class="form-control" name="righty" id="righty">
    </div>
    <div class="form-group tri">
        <label for="leftx">Left X axis</label>
        <input type="number" min="0" max="449" class="form-control" name="leftx" id="leftx">
    </div>
    <div class="form-group tri">
        <label for="lefty">Left Y axis</label>
        <input type="number" min="0" max="399" class="form-control" name="lefty" id="lefty">
    </div>
    <div class="form-group ell">
        <label for="rx">rx</label>
        <input type="number" min="0" max="449" class="form-control" name="rx" id="rx">
    </div>
    <div class="form-group ell">
        <label for="ry">ry</label>
        <input type="number" min="0" max="399" class="form-control" name="ry" id="ry">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

@section Scripts {

    <script type="text/javascript" src="@Url.Content("~/Scripts/Add/add.js")" asp-append-version="true"></script>

}

